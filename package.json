{
    "name": "stock-ai-platform",
    "version": "1.0.0",
    "description": "AI-powered stock analysis platform",
    "private": true,
      "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:vercel": "cd frontend && npm install && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../api && npm install",
    "vercel-build": "npm run build:frontend",
    "start": "npm run dev"
  },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "workspaces": [
        "frontend",
        "backend"
    ]
}